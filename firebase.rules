rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in [
          'admin@newculturetrends.com'
        ];
    }

    match /items/{itemId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() ||
        (
          request.resource.data.keys().hasOnly(['votes', 'updatedAt']) &&
          request.resource.data.votes == resource.data.votes + 1
        );
    }

    match /itemVotes/{voteId} {
      // Allow anyone to read and create votes (IP-based, no auth required)
      allow read: if true;
      allow create: if !exists(/databases/{database}/documents/itemVotes/{voteId});
      allow delete: if isAdmin();
      allow update: if false;
    }

    match /polls/{pollId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pollVotes/{voteId} {
      // Allow anyone to read and create poll votes (IP-based, no auth required)
      allow read: if true;
      allow create: if !exists(/databases/{database}/documents/pollVotes/{voteId});
      allow delete: if isAdmin();
      allow update: if false;
    }

    match /newsletter/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}

